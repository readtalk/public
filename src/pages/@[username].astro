---
/**
 * READTalk Public Profile Page
 * Route: /@username
 * Mode: SSR (Cloudflare Workers)
 */

export const prerender = false;

import CopyProfile from "../components/CopyProfile.jsx";

const { username } = Astro.params;

// nanti fetch ke Durable Object di sini
// const profile = await fetchProfile(username);
---

<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@{username} · READTalk</title>

    <meta name="description" content={`Profil publik @${username} di READTalk`} />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph -->
    <meta property="og:title" content={`@${username} · READTalk`} />
    <meta property="og:type" content="profile" />
    <meta property="og:url" content={`https://social.readtalk.workers.dev/@${username}`} />
  </head>

  <body>
    <main style="max-width: 720px; margin: 0 auto; padding: 2rem;">
      <!-- IDENTITAS -->
      <section>
        <h1 style="margin-bottom: 0.25rem;">@{username}</h1>
        <p style="opacity: 0.7; margin-top: 0;">
          Public identity · READTalk
        </p>
      </section>

      <!-- ACTION -->
      <section style="margin-top: 1.5rem;">
        <CopyProfile client:idle />
      </section>

      <!-- PLACEHOLDER BIO -->
      <section style="margin-top: 2rem;">
        <p>
          Ini adalah halaman identitas publik READTalk.
          Konten bersifat terbuka dan dapat diindeks mesin pencari.
        </p>
      </section>
    </main>
  </body>
</html>
