---
/**
 * READTalk — Public Identity Index
 * Role:
 * - Google-nya READTalk
 * - Read-only
 * - SSR
 * - No auth, no form, no mutation
 *
 * Data source (future):
 * - Durable Object / D1 / KV (public only)
 */

// MOCK DATA sementara (akan diganti fetch ke DO)
const users = [
  {
    username: "alice",
    displayName: "Alice Wijaya",
    bio: "Open-source enthusiast • Jakarta",
    url: "/@alice",
  },
  {
    username: "budi",
    displayName: "Budi Santoso",
    bio: "Builder • Cloudflare • Durable Objects",
    url: "/@budi",
  },
  {
    username: "readtalk",
    displayName: "READTalk Official",
    bio: "Read to talk. Talk to trust.",
    url: "/@readtalk",
  },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>READTalk — Public Directory</title>
    <meta
      name="description"
      content="Explore public identities on READTalk. Read-only, privacy-first human directory."
    />

    <link rel="icon" href="/favicon.svg" />
  </head>

  <body>
    <main class="container">
      <header class="header">
        <h1>READTalk</h1>
        <p class="subtitle">
          Public human directory.  
          Read-only. Privacy-first.
        </p>
      </header>

      <section class="directory">
        {users.map((user) => (
          <a href={user.url} class="card">
            <h2>{user.displayName}</h2>
            <p class="username">@{user.username}</p>
            <p class="bio">{user.bio}</p>
          </a>
        ))}
      </section>
    </main>

    <style>
      :root {
        --bg: #ffffff;
        --fg: #0f172a;
        --muted: #64748b;
        --border: #e5e7eb;
        --accent: #dc2626; /* READTalk red */
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --bg: #020617;
          --fg: #f8fafc;
          --muted: #94a3b8;
          --border: #1e293b;
        }
      }

      body {
        margin: 0;
        background: var(--bg);
        color: var(--fg);
        font-family: system-ui, -apple-system, BlinkMacSystemFont,
          "Segoe UI", sans-serif;
      }

      .container {
        max-width: 720px;
        margin: 0 auto;
        padding: 2rem 1rem 4rem;
      }

      .header {
        margin-bottom: 2.5rem;
      }

      h1 {
        font-size: 2.2rem;
        margin: 0;
        color: var(--accent);
      }

      .subtitle {
        margin-top: 0.5rem;
        color: var(--muted);
        font-size: 0.95rem;
        line-height: 1.5;
      }

      .directory {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .card {
        display: block;
        padding: 1.25rem 1.25rem;
        border: 1px solid var(--border);
        border-radius: 14px;
        text-decoration: none;
        color: inherit;
        transition: border-color 0.15s ease, transform 0.15s ease;
      }

      .card:hover {
        border-color: var(--accent);
        transform: translateY(-1px);
      }

      .card h2 {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 600;
      }

      .username {
        margin: 0.25rem 0 0.5rem;
        font-size: 0.85rem;
        color: var(--muted);
      }

      .bio {
        margin: 0;
        font-size: 0.95rem;
        line-height: 1.4;
      }
    </style>
  </body>
</html>
