---
/**
 * READTalk Public Directory
 * Route: /
 * Role: Global discovery page (SSR)
 */

import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

/**
 * SEMENTARA — mock data
 * nanti diganti fetch dari:
 * - Durable Object
 * - D1
 * - atau API Worker
 */
const users = [
  {
    username: "readtalk",
    displayName: "READTalk Official",
    bio: "Read to talk. Talk to trust."
  },
  {
    username: "alice",
    displayName: "Alice",
    bio: "Private by design."
  },
  {
    username: "bob",
    displayName: "Bob",
    bio: "Identity lives in the room."
  }
];
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      title="READTalk — Public Directory"
      description="Discover public identities on READTalk"
    />
  </head>

  <body>
    <Header />

    <main class="container">
      <section class="hero">
        <h1>READTalk</h1>
        <p class="tagline">Read to talk. Talk to trust.</p>

        <input
          type="search"
          placeholder="Search username…"
          class="search"
          disabled
        />
        <p class="note">Search will be enabled soon</p>
      </section>

      <section class="directory">
        <h2>Public Profiles</h2>

        <ul class="user-list">
          {users.map((user) => (
            <li class="user-card">
              <a href={`/@${user.username}`}>
                <h3>{user.displayName}</h3>
                <p class="username">@{user.username}</p>
                {user.bio && <p class="bio">{user.bio}</p>}
              </a>
            </li>
          ))}
        </ul>
      </section>
    </main>

    <Footer />
  </body>
</html>

<style>
.container {
  max-width: 860px;
  margin: 0 auto;
  padding: 2rem 1.5rem;
}

.hero {
  text-align: center;
  margin-bottom: 3rem;
}

.tagline {
  opacity: 0.7;
  margin-bottom: 1.5rem;
}

.search {
  width: 100%;
  max-width: 420px;
  padding: 0.75rem 1rem;
  border-radius: 999px;
  border: 1px solid currentColor;
}

.note {
  font-size: 0.8rem;
  opacity: 0.5;
  margin-top: 0.5rem;
}

.directory h2 {
  margin-bottom: 1rem;
}

.user-list {
  list-style: none;
  padding: 0;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
  gap: 1rem;
}

.user-card {
  border: 1px solid currentColor;
  border-radius: 1rem;
  padding: 1rem;
}

.user-card a {
  text-decoration: none;
  color: inherit;
  display: block;
}

.username {
  opacity: 0.6;
  font-size: 0.9rem;
}

.bio {
  margin-top: 0.5rem;
  font-size: 0.9rem;
}
</style>
